diff --git a/docs/document/generatePDF.sh b/docs/document/generatePDF.sh
new file mode 100644
index 0000000000..95cd1b7965
--- /dev/null
+++ b/docs/document/generatePDF.sh
@@ -0,0 +1,74 @@
+targetDir="content"
+localDir="source"
+mkdir $localDir
+# é»˜è®¤çš„è¯­è¨€
+lang="$1"
+if [[ "$lang" == "en" ]] ;then
+    sed -i "s/language = 'zh_CN'/language = 'en_US'/" conf.py 
+    echo "printing English version PDF"
+else
+    sed -i "s/language = 'en_US'/language = 'zh_CN'/" conf.py 
+    echo "printing Chinese version PDF"
+fi
+
+cp conf.py ${localDir}/
+# å¤åˆ¶æ‰€æœ‰æºæ–‡ä»¶çš„å†…å®¹
+cp -r ${targetDir}/* ${localDir}/
+cd $localDir
+# faqå»é™¤ç¼–å·
+sed -i 's/##[ ][0-9]*./##/g' faq/*
+
+# å»ºç«‹ä¸»ç›®å½•çš„index.rst
+echo -e ".. toctree::\n   :maxdepth: 1\n   :titlesonly:\n" >> index.rst
+
+# éå†æ‰€æœ‰çš„md
+for f in `find . -type f -name "*${lang}.md"`; do
+    title=`grep -oP '^title = "\K[^"]*' $f` # æ–‡ä»¶çš„æ ‡é¢˜
+    weight=`grep -oP '^weight = \K.*' $f` # æ–‡ä»¶çš„æƒé‡ï¼ˆä»£è¡¨æ–‡ä»¶æ’ç‰ˆçš„é¡ºåºï¼‰
+    sed -i -n '/+++/,/+++/!p' $f # åˆ é™¤front matter
+    fileName=${f##*/} # æ–‡ä»¶å
+    path=${f%/*} # æ–‡ä»¶è·¯å¾„
+    lastpath=${path%/*} # ä¸Šä¸€çº§è·¯å¾„
+    foldername=${path##*/} # å½“å‰æ–‡ä»¶å¤¹å
+    # å¦‚æœæ˜¯indexæ–‡ä»¶åˆ™
+    if [[ "${fileName}" == "_index.${lang}.md" ]]
+    then
+    # å°†æ–‡ä»¶çš„æƒé‡å†™åˆ°ä¸Šä¸€çº§åˆ«çš„filelistæ–‡ä»¶ä¸­
+    echo -e "${weight}\t${foldername}/index" >> "${lastpath}/filelist.txt"
+    # å½“å‰ç›®å½•ä¸‹æ–°å»ºä¸€ä¸ªindex.rst
+    echo "============================" >> "${path}/index.rst"
+    echo $title >> "${path}/index.rst"
+    echo "============================" >> "${path}/index.rst"
+    echo -e ".. toctree::\n   :maxdepth: 1\n   :titlesonly:\n\n   _index.${lang}.md" >> "${path}/index.rst"
+    else
+    # ä¸æ˜¯çš„è¯æ·»åŠ æ ‡é¢˜è¡Œ
+    sed -i "1i # ${title}" $f
+    # å°†åºå·å’Œæ–‡ä»¶åä¿å­˜åˆ°filelistæ–‡ä»¶
+    echo -e "${weight}\t${fileName}" >> "${path}/filelist.txt"
+    fi
+done
+
+
+# æ‰€æœ‰çš„filelistè¿›è¡Œæ’åºåè¾“å‡ºåˆ°index.rstä¸­
+for f in `find . -type f -name "*list.txt"`; do
+    path=${f%/*}
+    sort -nk 1  $f | awk '{print $2}' | sed 's/^/   /g' >> "${path}/index.rst"
+    rm $f
+done
+
+# è½¬æ¢æˆrst
+for f in `find . -type f -name "*${lang}.md"`; do
+    sed -i -n '/+++/,/+++/!p' $f
+    # åˆ é™¤æ‰€æœ‰çš„å›¾æ ‡è¡Œå› ä¸ºä¸èƒ½æ’ç‰ˆ
+    sed -i /http.*svg/d $f
+    sed -i /http.*codacy/d $f
+    pandoc $f -o "${f}.rst"
+    rm $f
+done
+
+cd ..
+make latexpdf
+cp _build/latex/*.pdf static/pdf/shadingsphere_docs_${lang}.pdf
+echo "shadingsphere_docs_${lang}.pdf"
+make clean
+rm -rf {_build,source}
